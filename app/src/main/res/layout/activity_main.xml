<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="3dp"
    android:scrollbarThumbVertical="@drawable/vertical_scrollview_bg"
    android:scrollbarTrackVertical="@drawable/vertical_scroll_line"
    android:background="@drawable/gbp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">



    <ImageButton
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="button1click"
        tools:ignore="OnClick"
        android:src="@drawable/dzikir" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:onClick="button2click"
        tools:ignore="OnClick"
        android:src="@drawable/mood" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"

        android:onClick="button3click"
        tools:ignore="OnClick"
        android:src="@drawable/reminder" />



</LinearLayout>
</ScrollView>